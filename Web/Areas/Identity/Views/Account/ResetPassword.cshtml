@model Web.Areas.Identity.ViewModels.ResetPasswordViewModel
@{  
    ViewData["Title"] = "Login";  
    Layout = "~/Views/Shared/_Layout.cshtml";  
}  
<h1>ResetPassword</h1>
<div class="row">
    <div class="col-md-4">
        <form action="/Identity/Account/ResetPassword" method="POST">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input name="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input name="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <input asp-for="Email" type="hidden" name="Email" value="@Model.Email" class="form-control" />
            <input asp-for="Token" type="hidden" name="Token" value="@Model.Token" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>