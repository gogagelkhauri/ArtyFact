@model Web.Areas.Identity.ViewModels.RegisterViewModel  
@{  
    ViewData["Title"] = "Register";  
    Layout = "~/Views/Shared/_Layout2.cshtml";  
}  
@section Styles{
    <link rel="stylesheet" href="~/css/register.css">
}
<div class="register-container"  >
    <div class="title">
        <h2>Registration</h2>
    </div>
    <form action="/Identity/Account/Register" method="post">
        <div class="name">
            @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First name"})<br>
            @Html.ValidationMessageFor(m => m.FirstName, "")
        </div>

        <div class="last-name">
            @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last name"})<br>
            @Html.ValidationMessageFor(m => m.LastName, "")
        </div>

        <div class="username">
            @Html.TextBoxFor(m => m.UserName, new { placeholder = "Username"})<br>
            @Html.ValidationMessageFor(m => m.UserName, "")
        </div>

        <div class="email">
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email"})<br>
            @Html.ValidationMessageFor(m => m.Email, "")
        </div>

        <div class="password">
            @Html.PasswordFor(m => m.Password, new { placeholder = "Password"})<br>
            @Html.ValidationMessageFor(m => m.Password, "")  
        </div>

        <div class="confirm-password">
            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm password"})<br>
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "")  
        </div>

        <div class="btn-register">
            <button type="submit">Register</button>
        </div>

        <div class="option-login">
            <p>Already registered?</p>
            <a href="/Identity/Account/Login">Login Here</a>
        </div>
    </form>
</div>