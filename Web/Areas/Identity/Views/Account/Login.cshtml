@model Web.Areas.Identity.ViewModels.LoginViewModel  
@{  
    ViewData["Title"] = "Login";  
    Layout = "~/Views/Shared/_Layout.cshtml";  
}  
  
  
<div class="container">  
    <h1>Login</h1>  
    <form asp-action="Login" asp-controller="Account" method="post">  
  
        <div class="logindiv">  
              
            <div class="form-group col-sm-12">  
                <label asp-for="@Model.Email" ></label>  
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })  
            </div>  
  
            <div class="form-group col-sm-12">  
                <label asp-for="@Model.Password"></label>   
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })  
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })  
            </div>  
  
            <div class="form-group">  
                <div class="col-sm-12 btn-submit">  
                    <button type="submit" class="btn btn-success mb-2">Login</button>  <br />
                    <a class="btn btn-primary btn-sm  mb-2" href="/Identity/Account/Register">Register</a>  <br />
                    <a class="btn btn-warning btn-sm"  href="/Identity/Account/ForgotPassword">Forgot Password</a>
                </div>  
            </div>  
        </div>  
    </form>  
</div>  