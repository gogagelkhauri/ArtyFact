
@model Web.Areas.Identity.ViewModels.LoginViewModel  
@{  
    ViewData["Title"] = "Login";  
    Layout = "~/Views/Shared/_Layout2.cshtml";  
}  
@section Styles{
    <link rel="stylesheet" href="~/css/login.css">
}
    <div class="login-container">
        <div class="title">
            <h2>Login</h2>
        </div>
        <form action="">
            <div class="username">
                <input type="text" placeholder="Username">
            </div>

            <div class="password">
                <input type="password" placeholder="Password">
            </div>

            <div class="help">
                <div class="remember">
                   <input type="checkbox">
                   <p>Remember me</p>
                </div>

                <div class="forgot">
                    <a href="#">Forgot your password?</a>
                </div>
            </div>

            <div class="btn-login">
                <button>Login</button>
            </div>

            <div class="option--register">
                <p>Or</p>
                <a href="register.html">Create New Account</a>
            </div>
        </form>
    </div>