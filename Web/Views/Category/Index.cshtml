@model List<Domain.Entities.Category> 
@{  
    ViewData["Title"] = "Categories";  
    Layout = "~/Views/Shared/_blogLayout.cshtml";  
}  
@section Styles{
    <link rel="stylesheet" href="~/css/Front/artist.css">

}
    <div class="section--title">
        <h2>Categories</h2>
    </div>

    <section>
        <div class="artists--wrapper">
            @if(Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <div class="artist--content">
                            <img src="~/img/octane.jpg" alt="rover" style="width: 300px; height: 400px; object-fit: cover; border-radius: 1rem;" />
                
                        <h2><a href="/product/products?category=@item.Name">@item.Name</a></h2>
                    </div>
                }
            }
        </div>
    </section>
