@model Domain.DTO.PostDTO
@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <a href="/blog" class="btn btn-primary float-right mb-2">Back</a>
    <h1>@Model.Title</h1>
    <div>
        <img src="@Model.ImageURL" style="width:150px;height: 150px;" alt="Image">
    </div>
    <p>Description: <br> @Html.Raw(Model.Description)</p>
    <p>Price: @Model.Date</p>
    <p>Category: @Model.User.User.UserName</p>
</div>